# Node Environment
NODE_ENV=development
PORT=3002

# Public URL (for OAuth callbacks)
APP_URL=http://localhost:3002

# Database
DATABASE_URL=postgresql://cartrel:cartrel@localhost:5432/cartrel

# Redis
REDIS_URL=redis://localhost:6379/2

# Shopify App Credentials
# Get these from: https://partners.shopify.com/
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_SCOPES=read_products,write_products,read_orders,write_orders,write_draft_orders,read_inventory,read_customers,write_metafields
SHOPIFY_APP_URL=http://localhost:3002

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here_change_me_in_production

# Encryption Key for access tokens (generate with: node -e "console.log(crypto.randomBytes(32).toString('hex'))")
# CRITICAL: Must be 64 characters (32 bytes in hex). Keep this secret and never commit to git!
ENCRYPTION_KEY=your_encryption_key_here_must_be_64_hex_chars_change_in_production

# Internal admin API protection (set in production/staging)
ADMIN_API_KEY=change_me

# Optional: Email Configuration
EMAIL_FROM=noreply@cartrel.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Optional: S3/MinIO (for file uploads)
S3_ENDPOINT=localhost
S3_PORT=9000
S3_USE_SSL=false
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=cartrel

# Optional: Alerts (Slack/webhook)
ALERT_WEBHOOK_URL=
