{
  "name": "cartrel-backend",
  "version": "0.1.0",
  "description": "Cartrel backend - Shopify wholesale infrastructure",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "validate": "npm run type-check && npm run lint && npm run test",
    "prepare": "node -e \"try { require('husky') } catch(e) { process.exit(0) }\" && cd .. && husky backend/.husky || true",
    "uat:plan": "tsx scripts/uat-plan-manager.ts"
  },
  "dependencies": {
    "@bull-board/api": "^5.10.0",
    "@bull-board/express": "^5.10.0",
    "@manabot/slack-reporter": "file:../../manabot/packages/slack-reporter",
    "@prisma/client": "^5.7.0",
    "@shopify/shopify-api": "12.1.2",
    "bull": "^4.12.0",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jose": "^5.2.0",
    "nanoid": "^3.3.11",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.0",
    "jest": "^30.2.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "prisma": "^5.7.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
